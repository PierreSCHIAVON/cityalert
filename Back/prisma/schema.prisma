generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model alert {
  id_alert      Int             @default(autoincrement())
  user_id       Int
  title         String          @db.VarChar(255)
  description   String
  status        String          @db.VarChar(50)
  intensity     String          @db.VarChar(50)
  created_at    DateTime        @default(now()) @db.Timestamp(6)
  location_lat  Decimal         @db.Decimal
  location_lon  Decimal         @db.Decimal
  id_category   Int
  category      category        @relation(fields: [id_category], references: [id_category], onDelete: NoAction, onUpdate: NoAction)
  media         media[]
  participation participation[]

  @@id([id_alert, user_id])
}

model api_key {
  id_api_key   Int
  user_id      Int
  key_hash     String    @unique
  name         String?   @db.VarChar(100)
  created_at   DateTime? @db.Timestamp(6)
  last_used_at DateTime? @db.Timestamp(6)
  expires_at   DateTime? @db.Timestamp(6)
  is_active    Boolean?

  @@id([id_api_key, user_id])
}

model category {
  id_category Int     @id @default(autoincrement())
  title       String  @db.VarChar(100)
  alert       alert[]
}

model media {
  id_media    Int      @id @default(autoincrement())
  file_type   String?  @db.VarChar(50)
  file_url    String   @db.VarChar(255)
  uploaded_at DateTime @default(now()) @db.Timestamp(6)
  id_alert    Int
  user_id     Int
  alert       alert    @relation(fields: [id_alert, user_id], references: [id_alert, user_id], onDelete: NoAction, onUpdate: NoAction)
}

model participation {
  id_participation Int      @default(autoincrement())
  user_id          Int
  response         String?
  date_response    DateTime @default(now()) @db.Timestamp(6)
  id_alert         Int
  alert_user_id    Int
  alert            alert    @relation(fields: [id_alert, alert_user_id], references: [id_alert, user_id], onDelete: NoAction, onUpdate: NoAction)

  @@id([id_participation, user_id])
}
